  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug integration test 'basic'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--test=basic",
          "--package=mosaik"
        ],
        "filter": {
          "name": "basic",
          "kind": "test"
        }
      },
      "args": [
        "groups::members_can_see_each_other"
      ],
      "env": {
        "TEST_TRACE": "on"
      },
      "cwd": "${workspaceFolder}"
    }
  ]
}